{
    "env": {
        "es2021": true,
        "commonjs": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
        "no-unused-vars": ["error", { "vars": "all", "args": "all", "ignoreRestSiblings": true }],
        "max-len": ["error", {"code":  120}]
    }
}
